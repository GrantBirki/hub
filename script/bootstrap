#!/usr/bin/env bash
set -e

if [ -n "$TRAVIS" ]; then
  curl -fsSL https://ci-cache.s3.amazonaws.com/tmux-zsh.ubuntu.tgz | tar -xz -C ~
  exit 0
fi

STATUS=0

if ! go version; then
  echo "You need to install Go 1.2 to build hub" >&2
  STATUS=1
fi

{ ruby --version
  bundle install --path vendor/bundle -j 4
} || {
  echo "You need Ruby 2.1 and Bundler to run hub tests" >&2
  STATUS=1
}

if [ $STATUS -eq 0 ]; then
  echo "Everything OK."
fi

exit $STATUS
